---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"time"> {
  date: Date;
}

const { date, ...props } = Astro.props;
const localeDate = date.toLocaleDateString("en-uk", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<time datetime={date.toISOString()} {...props}>{localeDate}</time>
