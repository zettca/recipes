<form id="create-form" method="POST" class="flex flex-col gap-4">
  <label>
    Title
    <input required type="text" name="title" />
  </label>
  <label>
    Description
    <input type="text" name="description" />
  </label>
  <label>
    Tags (tag1, tag2)
    <input type="text" name="tags" />
  </label>
  <button>Submit</button>
</form>

<script>
  import { kebabCase } from "change-case";

  document.querySelector("form")?.addEventListener("submit", function (event) {
    event.preventDefault();
    const data = Object.fromEntries(new FormData(this));
    const filename = `${kebabCase(String(data.title))}.md`;
    const value = `---
title: ${data.title}
description: ${data.description}
tags: ${data.tags}
pubDate: ${new Date().toISOString().slice(0, 10)}
lang: en
---
`;

    const searchParams = new URLSearchParams({ filename, value });
    const baseUrl =
      "https://github.com/zettca/recipes/new/master/src/content/recipes";
    const url = `${baseUrl}?${searchParams}`;

    window.open(url, "_blank");
  });
</script>
